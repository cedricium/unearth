{
  "name": "unearth",
  "version": "1.0.0-beta.0",
  "description": "Discover all of your saved posts from Reddit, right in your browser's new tab page.",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "sass": "sass src/public/styles/main.scss src/public/styles/main.css",
    "sass:watch": "npm run sass -- --watch",
    "start": "npm run sass && npm run webpack && web-ext -s build/ -f nightly run & npm run webpack:watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack --config webpack.config.js",
    "webpack:watch": "npm run webpack -- --watch"
  },
  "author": "Cedric Amaya <amaya.cedric@gmail.com> (https://cedric.tech/)",
  "license": "MIT",
  "dependencies": {
    "animate.css": "^3.6.1",
    "bulma": "^0.7.1",
    "dompurify": "^1.0.6",
    "font-awesome": "^4.7.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.11.2",
    "fs-extra": "^0.30.0",
    "html-loader": "^0.4.5",
    "web-ext": "^2.7.0",
    "webpack": "2.2.1",
    "webpack-dev-server": "^2.3.0",
    "write-file-webpack-plugin": "3.4.2"
  }
}